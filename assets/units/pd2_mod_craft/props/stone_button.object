<dynamic_object>
	<diesel materials="units/pd2_mod_craft/props/stone_button" orientation_object="rp_root" />
	
	<bodies>
		<body name="button_body" enabled="true" template="static">
			<object collision_type="box" name="button" />
		</body>
		<body name="button_open" enabled="false" template="static">
			<object collision_type="mesh_mopp" name="button_pressed" />
		</body>
	</bodies>
	
	<graphics>
		<graphic_group name="g_all" enabled="true">
			<object	name="button"			enabled="true" shadow_caster="true"/>
			<object	name="button_pressed"			enabled="false" shadow_caster="false"/>
		</graphic_group>
	</graphics>
</dynamic_object>
